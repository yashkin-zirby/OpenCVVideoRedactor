<Page x:Class="OpenCVVideoRedactor.View.ProjectsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenCVVideoRedactor.View"
      xmlns:db="clr-namespace:OpenCVVideoRedactor.Model.Database"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      DataContext="{Binding ProjectListsViewModel, Source={StaticResource ServiceLocatorObject}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectsListPage">

    <Grid Background="#595965">
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left" Width="160" Command="{Binding NavigateToCreatePage}">Создать новый проект</Button>
        <Button HorizontalAlignment="Left" Margin="320,0" Width="160" IsEnabled="{Binding ProjectIsSelected}" Command="{Binding DeleteSelectedProject}">Удалить проект</Button>
        <Button HorizontalAlignment="Left" Margin="160,0" Width="160" IsEnabled="{Binding ProjectIsSelected}" Command="{Binding OpenSelectedProject}">Открыть</Button>
        <ScrollViewer Grid.Row="1">
            <ListView Background="#595965" ItemsSource="{Binding Projects}" SelectedIndex="{Binding SelectedProjectIndex}" HorizontalContentAlignment="Stretch">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="PreviewMouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding OpenSelectedProject}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="db:Project">
                        <DockPanel>
                            <TextBlock Background="#494949" Padding="10,2" Text="{Binding Path=Title}" FontWeight="Bold" FontSize="14" Foreground="#F0F0FF"/>
                            <TextBlock Background="#494949" Padding="5,2" Text="{Binding Path=VideoHeight}" FontSize="14" Foreground="#F0F0FF"/>
                            <TextBlock Background="#494949" Padding="0,2" Text="x" FontSize="14" Foreground="#F0F0FF"/>
                            <TextBlock Background="#494949" Padding="5,2" Text="{Binding Path=VideoWidth}" FontSize="14" Foreground="#F0F0FF"/>
                            <TextBlock Background="#494949" Padding="10,2,0,0" Text="{Binding Path=VideoFps}" FontSize="14" Foreground="#F0F0FF"/>
                            <TextBlock Background="#494949" Padding="2,2" Text="fps" FontSize="14" Foreground="#F0F0FF"/>
                            <TextBlock Background="#494949" Padding="50,2" Text="{Binding Path=DataFolder}" TextAlignment="Left" FontSize="14" Foreground="#F0F0FF"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <Border Grid.ColumnSpan="3" Grid.RowSpan="3" Background="#88444455" Visibility="{Binding LoaderVisibility}">
            <Ellipse Width="100" Height="100" StrokeThickness="3" RenderTransformOrigin="0.5, 0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse.Stroke>
                    <LinearGradientBrush EndPoint="0.3,1" StartPoint="0.3,0">
                        <GradientStop Color="#000033" Offset="0"/>
                        <GradientStop Color="#E0E0FF" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Stroke>
                <Ellipse.RenderTransform>
                    <RotateTransform/>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                        To="360" Duration="0:0:1" RepeatBehavior="Forever" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Border>
    </Grid>
</Page>

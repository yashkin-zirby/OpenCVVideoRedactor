<Page x:Class="OpenCVVideoRedactor.View.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenCVVideoRedactor.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage">

    <Grid Background="#595965">
        <TextBlock Style="{StaticResource InfoTextBlock}" Margin="0,5" FontSize="18">О программе</TextBlock>
        <ScrollViewer Margin="0,40,0,0">
            <DockPanel>
                <TextBlock Style="{StaticResource InfoTextBlock}">Данное приложение </TextBlock>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</Page>
